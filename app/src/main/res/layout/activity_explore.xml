<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Explore"
    android:background="@color/background">

  <Button
      android:id="@+id/mypostbtn3"
      android:layout_width="132dp"
      android:layout_height="69dp"
      android:layout_marginTop="67dp"
      android:background="?android:attr/selectableItemBackground"
      android:contentDescription="View My Posts"
      app:icon="@drawable/user"
      app:iconGravity="textStart"
      app:iconPadding="0dp"
      app:iconSize="50dp"
      app:iconTint="#FE8869"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/lv_exploreposts" />

  <Button
      android:id="@+id/addbtn3"
      android:layout_width="132dp"
      android:layout_height="69dp"
      android:layout_marginStart="7dp"
      android:layout_marginTop="67dp"
      android:layout_marginEnd="9dp"
      android:background="?android:attr/selectableItemBackground"
      android:contentDescription="Add A New Post"
      app:icon="@android:drawable/ic_menu_add"
      app:iconGravity="textStart"
      app:iconPadding="0dp"
      app:iconSize="50dp"
      app:iconTint="#FE8869"
      app:layout_constraintEnd_toStartOf="@+id/mypostbtn3"
      app:layout_constraintStart_toEndOf="@+id/expbtn3"
      app:layout_constraintTop_toBottomOf="@+id/lv_exploreposts" />

  <Button
      android:id="@+id/expbtn3"
      android:layout_width="132dp"
      android:layout_height="69dp"
      android:layout_marginTop="67dp"
      android:background="?android:attr/selectableItemBackground"
      android:contentDescription="Explore Other's Posts"
      android:isScrollContainer="false"
      android:pointerIcon="none"
      app:icon="@android:drawable/ic_menu_compass"
      app:iconGravity="textStart"
      app:iconPadding="0dp"
      app:iconSize="50dp"
      app:iconTint="#FE8869"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/lv_exploreposts" />

  <ListView
      android:id="@+id/lv_exploreposts"
      android:layout_width="388dp"
      android:layout_height="439dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="39dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView2"
      android:background="@color/background" />

  <TextView
      android:id="@+id/textView2"
      android:layout_width="156dp"
      android:layout_height="43dp"
      android:layout_marginStart="127dp"
      android:layout_marginTop="49dp"
      android:fontFamily="@font/khand_light"
      android:text="Explore Page"
      android:textAlignment="center"
      android:textColor="#FF5722"
      android:textSize="34sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
